<Window x:Class="IC_Register_Analyzer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="800" Width="1280">
    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBlock Text="IC名："
                       VerticalAlignment="Center"></TextBlock>
            <TextBlock Text="{Binding SelectICName}"
                       VerticalAlignment="Center"></TextBlock>
            <Button Content="選択"
                    Margin="10,10,10,10"
                    Width="80"
                    Command="{Binding CommandShowSelectIC}"></Button>
        </StackPanel>
        
        <ContentControl Grid.Row ="1" prism:RegionManager.RegionName="MainWindowContentRegion" />
    </Grid>
</Window>
