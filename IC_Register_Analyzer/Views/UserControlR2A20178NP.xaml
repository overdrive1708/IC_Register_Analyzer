                    <Border
                        Grid.Row="1"
                        Grid.Column="10"
                        BorderBrush="Black"
                        BorderThickness="0,0,1,1" />
                    <Border
                        Grid.Row="1"
                        Grid.Column="11"
                        BorderBrush="Black"
                        BorderThickness="0,0,1,1" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="5,5,5,5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="D11" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="5,5,5,5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="D10" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="2"
                        Margin="5,5,5,5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="D9" />
                    <TextBlock
                        Grid.Row="1"
